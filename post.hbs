{{!< default}}
<link href="https://plus.google.com/u/0/115045214921644516100"
       rel="author">
       <link href="https://plus.google.com/u/0/b/100716445278628827523/+SwishLabsCo1" rel="publisher">
{{pagination.pages}}

<main class="site-main" role="main">
    {{#post}}
    <article class="{{post_class}} post-full" id="post-{{id}}" itemscope itemtype="http://schema.org/BlogPosting">
        <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}" itemprop="datePublished">{{date format='MMMM D, YYYY'}}</time>
        <div class="wrapper">
            <h1 class="post-title">{{{title}}}</h1>
            <div class="post-content" itemprop="articleBody">
            {{content}}
            </div>

            <footer class="post-footer">
                <div class="sharing-icons"></div>
                {{#if author}}
                {{#if author.bio}}
                <aside class="author" itemprop="author" itemscope itemtype="http://schema.org/Person">
                    {{#if author.image}}<img alt="" class="author-image" itemprop="image" src="{{author.image}}">{{/if}}
                    <h2 class="author-name" itemprop="name">
                        <p class="published">Published by {{#if author.website}}<a class="author-website" href="{{author.website}}" itemprop="url">{{/if}}{{author.name}}{{#if author.website}}</a>{{/if}}</h2>
                    <p class="author-bio" itemprop="description">{{author.bio}}<a class="author-twitter" href="twitter.com/jcarrharris" itemprop="url">
                    <a class="author-twitter" href="twitter.com/chai_shah" itemprop="url">
                    <a rel="me" href="https://plus.google.com/u/0/115045214921644516100"></a>
                </p>
                </aside>
                {{/if}}
                {{/if}}
            </footer>
        </div>
    </article>
    {{/post}}
</main>